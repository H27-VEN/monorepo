{
  "presets": [
    "react",
    "es2015",
    "es2017",
    "stage-0"
  ],
  "plugins": [
    "transform-runtime"
  ],
  "env": {
    "server": {
      "plugins": [
        [
          "css-modules-transform",
          {
            "generateScopedName": "[hash:8]",
            "extensions": [
              ".scss",
              ".less",
              ".css"
            ]
          }
        ]
      ]
    }
  },
  "ignore": [
    "node_modules/"
  ]
}